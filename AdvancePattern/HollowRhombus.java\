Public class HollowRhombus{


Public static void Hollow_Rhombus(int n){

for(int i =1; i <= n; i++){

// space 

for(int j =1; j <= n-i; j++){
System.out.print(" ");
}

// star and space

for(int j = 1; j <= n; j++){
if(i == 1 || i == n || j == 1 || j == n){

System.out.print("*");
}else{
System.out.print(" ");
}

System.out.println();
}
}
Public static void main(String args[]){

Hollow_Rhombus(5);
}
}
